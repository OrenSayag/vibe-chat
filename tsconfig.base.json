      "@monday-whatsapp/next-services": ["libs/next-services/src/index.ts"],
      "@monday-whatsapp/next-services/server": [
        "libs/next-services/src/server.ts"
      ],
      "@monday-whatsapp/shared-types": ["libs/shared-types/src/index.ts"],
      "@monday-whatsapp/utils": ["libs/ui/utils/src/index.ts"]
    }
  }
}
